{
	"name": "AI Cloudy Calculator",
	"version": "1.0.0",
	"description": "An AI powered calculator. (Formerly Cloudy Calculator & Chromey Calculator)",
	"manifest_version": 3,
  
	"icons": {
	  "16":  "icons/16.png",
	  "48":  "icons/48.png",
	  "128": "icons/128.png"
	},
  
	"action": {
	  "default_icon": { "19": "icons/19.png" },
	  "default_title": "AI Cloudy Calculator",
	  "default_popup": "popup.html"
	},
  
	"background": {
	  "service_worker": "js/background.js"
	},
  
	"permissions": [
	  "storage"
	],
  
	"host_permissions": [
	  "https://*.google.com/*"
	],
  
	"options_ui": {
	  "page": "options.html",
	  "open_in_tab": false
	}
  }